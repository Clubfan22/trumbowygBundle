<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
<script type="text/javascript" src="{{ asset(base_path ~ 'trumbowyg.js') }}"></script>
<script type="text/javascript" src="{{ asset(base_path ~ 'langs/'~ language ~ ".min.js") }}"></script>
<link rel="stylesheet" type="text/css" href="{{ asset(base_path ~ 'ui/trumbowyg.css') }}"/>
<script type="text/javascript">
    {% spaceless %}
    $(function () {
        $.trumbowyg.svgPath = "{{ svg_path }}";
        {% for key,field in fields %}

            $("#{{ key }}").trumbowyg({
                lang: "{{ field.language }}",
                autogrow: {{ field.autogrow }},
                semantic: {{ field.semantic }},
                resetCss: {{ field.reset_css }},
                removeformatPasted: {{ field.remove_format_pasted }},
                btns: {{ field.btns | json_encode | raw }}
            });

        {% endfor %}
    });
    {% endspaceless %}
</script>