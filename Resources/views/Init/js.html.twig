{% if include_jquery %}
    <script src="{{ jquery_path }}"></script>
{% endif %}
<script type="text/javascript" src="{{ asset(base_path ~ 'trumbowyg.js') }}"></script>
<script type="text/javascript" src="{{ asset(base_path ~ 'langs/'~ language ~ ".min.js") }}"></script>
<link rel="stylesheet" type="text/css" href="{{ asset(base_path ~ 'ui/trumbowyg.css') }}"/>
<script type="text/javascript">
    {% spaceless %}
    $(function () {
        $.trumbowyg.svgPath = "{{ svg_path }}";
        {% for key,field in fields %}
            $("#{{ key }}").trumbowyg({
                lang: "{{ field.language }}",
                autogrow: {{ field.autogrow ? "true":"false"}},
                semantic: {{ field.semantic ? "true":"false"}},
                resetCss: {{ field.reset_css ? "true":"false"}},
                removeformatPasted: {{ field.remove_format_pasted ? "true":"false"}},
                btns: {{ field.btns | json_encode | raw }}
            });

        {% endfor %}
    });
    {% endspaceless %}
</script>
